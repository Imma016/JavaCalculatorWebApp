pipeline {
    agent any

    stages {
        stage('Initializing Maven') {
            steps {
                sh 'mvn initialize'
            }
        }
        stage ('checkout from git') {
            steps {
            checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Imma016/JavaCalculatorWebApp.git']])
            }
         }
        stage ('Build'){
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('test'){
            steps {
                sh 'mvn test'
            }
        }
        stage ('Execute ansible playbook'){
            steps {
            sh 'ls /home/ubuntu/'
            sh 'ls /home/ubuntu/.ssh'
            ansiblePlaybook disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory.yml', playbook: 'Calc-playbook.yml'            }
        }
    }
}
